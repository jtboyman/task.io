<div class="form-box">
  <div class="button-box">
    <div id="btn"></div>
    <button type="button" class="toggle-btn" onclick="login()">Log In</button>
    <button type="button" class="toggle-btn" onclick="register()">Register</button>
  </div>
<form class="login-form" id="log">
  <div>
    <label for="email-login">Email:</label>
    <input type="text" class="input-field" id="email-login" />
  </div>
  <div>
    <label for="password-login">Password:</label>
    <input type="password" class="input-field" id="password-login" />
  </div>
  <div>
    <button type="submit" class="submitting">Login</button>
  </div>
</form>

<form class="signup-form" id="sign">
  <div>
    <label for="username-signup">Username:</label>
    <input type="text" class="input-field" id="username-signup" />
  </div>
  <div>
    <label for="email-signup">Email:</label>
    <input type="text" class="input-field" id="email-signup" />
  </div>
  <div>
    <label for="password-signup">Password:</label>
    <input type="password" class="input-field" id="password-signup" />
  </div>
  <div>
    Are you an admin? 
    <input type="checkbox" class="chech-box" id="admin"></checkbox>
  </div>
  <div>
    <button type="submit" class="submitting">Register</button>
  </div>
  
</form>
</div>
<script src="/public/javascript/login.js"></script>