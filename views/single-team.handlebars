<article class="post">
    <div class="title">
        <p>{{team.team_name}}</p>
        <p>{{team.team_description}}</p>
    </div>
    <div class="meta">
        {{team.point_count}} point(s) by {{admin.admin_name}} on {{team.created_at}}

        <p>{{tasks.length}} task(s)</p>
    </div>
</article>

{{#if loggedInAdmin}}
<form id="task-form">
    <div>
        <textarea name="task-text"></textarea>
    </div>

    <div>
        <button type="submit" id="add-task-btn">add task</button>
        <button type="button" id="add-point-btn">award point</button>
    </div>
</form>
{{/if}}

<div>
    {{#each team.tasks}}
    <section>
        <div>
            {{admin.admin_name}} on {{created_at}}
        </div>
        <div>
            {{task_text}}
        </div>
    </section>
    {{/each}}
</div>

{{#if loggedInAdmin}}
<script src="/javascript/task.js"></script>
<script src="/javascript/addPoint.js"></script>
{{/if}}