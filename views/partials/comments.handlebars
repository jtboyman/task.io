<div class="comments">
    {{#each this}} <!--using this to access array bc it doesnt have properties like an object does-->
    <section class="comment">
        <div class="meta">
            {{user.username}} on {{format_date created_at}} <!--using a helper-->
        </div>
        <div class="text">
            {{comment_text}}
        </div>
    </section>
    {{/each}}
</div>